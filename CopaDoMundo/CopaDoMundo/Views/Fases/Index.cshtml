@model IEnumerable<CopaDoMundo.Models.Fases>

@{
    ViewBag.Title = "Index";
}

<h2>Fases da Copa do Mundo</h2>

<p>
    @Html.ActionLink("Cadastrar Fases", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.FaseId }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.FaseId }) |*@
            @Html.ActionLink("Deletar", "Delete", new { id=item.FaseId })
        </td>
    </tr>
}

</table>
