@model IEnumerable<CopaDoMundo.Models.Selecoes>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center">Lista de Seleções</h2>

<p style="text-align:center">
    <b>
        @if (Model.Count() < 16)
        {@Html.ActionLink("||Adicionar Seleção||", "Create")}
        @if (Model.Count() == 16)
        {@Html.ActionLink(" ||Sortear Oitavas de Final||", "SortearOitavas")}
    </b>
</p>

@if (Model.Count() > 0)
{
<div class="well">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Nome)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <th class="col-md-6">
                    @Html.DisplayFor(modelItem => item.Nome)
                </th>
                <th class="col-md-6">
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdSelecao }) |

                    @Html.ActionLink("Deletar", "Delete", new { id = item.IdSelecao })
                </th>
            </tr>
        }



    </table>

    @if (Model.Count() > 1)
    {
        <p style="text-align:center">
            <b>
                @Html.ActionLink("||Excluir Todas as Seleções||", "RemoverTodas")
            </b>
        </p>
    }

    @if (Model.Count() == 16)
    {
        <h4 style="text-align:center; color:red">Você já cadastrou as 16 seleções!</h4>
    }


    </div>
}
else
{ 
    <h4 style="text-align:center; color:red">Nenhuma seleção foi cadastra!</h4>
}

